@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <!--Welcome-->
    <div class="row">
        <div class="col=12 m-auto">
            <div class="text-center">
                <h1 class="display-4">Welcome</h1>
                <h2 class="h2">We Know Holiday Packages :)</h2>
            </div>
        </div>

    </div>
    <hr />
    <!--SlideShow-->
    <div class="row">
        <div class="col-12 m-auto">
            <div id="carouselExampleControls" class="carousel slide"
                 data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/Slide/cafe-3537801_640.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Slide/downtown-4045035_640.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Slide/people-4437215_640.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev"
                   href="#carouselExampleControls" role="button"
                   data-slide="prev">
                    <span class="carousel-control-prev-icon"
                          aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next"
                   href="#carouselExampleControls" role="button"
                   data-slide="next">
                    <span class="carousel-control-next-icon"
                          aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <hr />
    <!--Form and Table-->
    <div class="row">
        <div class="col-6">
            <h2 class="h2">Search Packages</h2>
            <table class="table border-right">
                <tr>
                    <h4 class="h4">Departing From</h4>
                    <div class="dropdown ">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="trufe" aria-expanded="false">
                            --Locations--
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Sydeny</a>
                            <a class="dropdown-item" href="#">London</a>
                            <a class="dropdown-item" href="#">New York</a>
                        </div>
                    </div>
                </tr>
                <tr>
                    <td>
                        <h4 class="h4">From</h4>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="trufe" aria-expanded="false">
                                --From--
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Sydeny</a>
                                <a class="dropdown-item" href="#">London</a>
                                <a class="dropdown-item" href="#">New York</a>
                            </div>
                        </div>
                    </td>
                    <td>
                        <h4 class="h4">Till</h4>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="trufe" aria-expanded="false">
                                --Till--
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Sydeny</a>
                                <a class="dropdown-item" href="#">London</a>
                                <a class="dropdown-item" href="#">New York</a>
                            </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h4 class="h4">
                            Travellers
                        </h4>
                        <input class="input-group-text" type="number" />
                    </td>
                    <td>
                        <h4 class="h4">
                            Stops
                        </h4>
                        <input class="input-group-text" type="number" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <button class="btn btn-md btn-info">Search Packages!</button>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-6">
            <h2 class="h2">Join Our Mailing List</h2>
            <p>
                Name
            </p>
            <input type="text" />
            <p>Email</p>
            <input type="email" />
        </div>
    </div>


    </div>
