@model Library.Models.Models.Search

@{
    ViewData["Title"] = "Home Page";
}
    <div class="container mb-3">
        <!--Welcome-->
        <div class="row">
            <div class="col-12 m-auto">
                <div class="text-center">
                    <h1 class="display-4">Welcome</h1>
                    <h3 class="h3">The adventure starts here..</h3>
                </div>
            </div>

        </div>
        <hr />
        <!--Form and Table-->
        <div class="row">
            <div class="col-sm-12 col-md-6 ml-sm-4 p-2">
                <form class="border" asp-controller="Home" asp-action="Search">
                    <h4 class="h4 mt-3">Search Packages</h4>
                    <hr />
                    <div class="form-group">
                        <input class="form-control" type="text" asp-for="TpNameQuery" />
                    </div>
                    <hr />

                    <h4 class="h4">Search By Location</h4>
                    <div class="form-group">
                        <input class="form-control" type="text" asp-for="TpLocationQuery" />
                    </div>
                    <input type="submit" value="Search" class="ml-4 mt-1 btn btn-primary" />
                </form>
            </div>
            <div class="col-sm-12 col-md-3">
                <h4>About</h4>
                <p>At Grande Travel we are committed to providing you with a great travel experience at the best available price. We have highly trained, expert teams who are ready to build your dream holiday today. </p>
            </div>
        </div>
        <!--SlideShow-->
        <hr/>
        <div class="row">
            <div class="col-sm-12 col-4-md">
                <h4>Our Goal</h4>
                <h6 class="h6">To provide the best holiday.</h6>
                <br/>
                <h6 class="h6">At the best price!</h6>
            </div>

            <div class="col-8 m-auto">
                <div id="carouselExampleControls" class="carousel slide"
                     data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/Slide/airport-2373727.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/Slide/adventure-2548133.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/Slide/beach-832346.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev"
                       href="#carouselExampleControls" role="button"
                       data-slide="prev">
                        <span class="carousel-control-prev-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next"
                       href="#carouselExampleControls" role="button"
                       data-slide="next">
                        <span class="carousel-control-next-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <hr />
  
    <!--Cards-->
        <div class="row p-5">
        <div class="col-md-4 col-sm-12">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/Cards/climbing-525768_640.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Rock Climbing</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/Cards/divers-668777_640.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Scuba Diving In Parramatta River</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        <div class=" col-md-4 col-sm-12">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/Cards/wine-bar-2139973_640.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Wine Tours in Doonside</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    </div>
</div>


