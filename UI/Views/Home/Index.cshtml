@model Library.Models.Models.Search

@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <!--Welcome-->
    <div class="row">
        <div class="col=12 m-auto">
            <div class="text-center">
                <h1 class="display-4">Welcome</h1>
                <h2 class="h2">We Know Holiday Packages :)</h2>
            </div>
        </div>

    </div>
    <hr />
    <!--SlideShow-->
    <div class="row">
        <div class="col-12 m-auto">
            <div id="carouselExampleControls" class="carousel slide"
                 data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/Slide/cafe-3537801_640.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Slide/downtown-4045035_640.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Slide/people-4437215_640.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev"
                   href="#carouselExampleControls" role="button"
                   data-slide="prev">
                    <span class="carousel-control-prev-icon"
                          aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next"
                   href="#carouselExampleControls" role="button"
                   data-slide="next">
                    <span class="carousel-control-next-icon"
                          aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <hr />
    <!--Form and Table-->
    <div class="row">
        <div class="col-sm-12 col-md-4 ml-sm-4 p-2" style="border:solid 1px gray">
            <form asp-controller="Home" asp-action="Search">

                <h3 class="h3">Search Packages</h3>
                <hr />
                <div class="form-group">
                    <input class="form-control" type="text" asp-for="TpNameQuery"/>
                </div>
                <hr />

                <h3 class="h3">Search By Location</h3>
                <div class="form-group">
                    <input class="form-control" type="text" asp-for="TpLocationQuery" />
                </div>
                <input type="submit" value="Search" class="btn btn-primary" />
            </form>





        </div>
        <div class="col-6">
            <h2 class="h2">Join Our Mailing List</h2>
            <p>
                Name
            </p>
            <input type="text" />
            <p>Email</p>
            <input type="email" />
        </div>
    </div>


    </div>
    <div class="row">
        <div class="col-8">
                <h2 class="h2">On Sale</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Departing</th>
                            <th> Stops</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Spain</td>
                            <td>6</td>
                            <td>$1,999</td>
                        </tr>
                        <tr>
                            <td>Hong Kong</td>
                            <td>9</td>
                            <td>$2,399</td>
                        </tr>
                        <tr>
                            <td>Sydney</td>
                            <td>3</td>
                            <td>$299</td>
                        </tr>
                        <tr>
                            <td>New York</td>
                            <td>6</td>
                            <td>$799</td>
                        </tr>
                        <tr>
                            <td>Rome</td>
                            <td>21</td>
                            <td>$12,999</td>
                        </tr>
                    </tbody>
                </table>
            </div>
    <hr />
</div>
<!--Cards-->
<div class="row">
    <div class="col-sm-12 col-md-4">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/images/Cards/climbing-525768_640.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Rock Climbing</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-3 ml-1">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/images/Cards/divers-668777_640.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Scuba Diving In Parramatta River</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-3 ml-1">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/images/Cards/wine-bar-2139973_640.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Wine Tours in Doonside</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    </div>
</div>

