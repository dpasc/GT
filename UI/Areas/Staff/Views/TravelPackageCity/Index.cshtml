@model IEnumerable<Library.Models.Models.TravelPackageCity>

@{
    ViewData["Title"] = "Index";
    var tp = (Library.Models.Models.TravelPackage)ViewBag.TravelPackage;
  
}

<h1>Travel Package City</h1>
<h2>
   Travel Package: @tp.Name
</h2>

<p>
    <a asp-action="Create" asp-route-tpId="@tp.Id">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfDays)
                </td>
                <td>
                    @Html.ActionLink("City Attractions", "Index", "TravelPackageCityAttractions", new { id = item.Id })|
                    @Html.ActionLink("Update", "Update", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |

                </td>
            </tr>
        }
    </tbody>
</table>
